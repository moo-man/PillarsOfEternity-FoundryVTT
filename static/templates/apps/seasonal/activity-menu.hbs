<form autocomplete="off">
    <div>
        <div class="activity-buttons">
            {{#each activities as |activity index|}}
            <button type="button" value="{{index}}">{{activity}}</option>
            {{/each}}
        </div>
        <input type="text" name="activity">
    </div>
    <button type="submit">{{localize "Submit"}}</button>
</form>