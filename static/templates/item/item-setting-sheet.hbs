<form class="{{cssClass}}" autocomplete="off">
    {{> systems/pillars-of-eternity/templates/item/item-header.hbs category=item.Type physical=false}}

    <nav class="sheet-tabs tabs">
        <a class="item active" data-tab="description">{{localize "PILLARS.Description"}}</a>
        <a class="item" data-tab="details">{{localize "PILLARS.Details"}}</a>
        <a class="item" data-tab="effects">{{localize "PILLARS.Effects"}}</a>
    </nav>

    <section class="content">
        {{> systems/pillars-of-eternity/templates/item/item-description.hbs}}


        <div class="tab details active" data-tab="details"> 

            
            <div class="form-group">
                <label>{{localize "PILLARS.XP"}}</label>
                <div class="form-fields small">
                    <label>{{localize "PILLARS.Free"}}</label>
                    <input type="number" name="system.xp.free" value="{{system.xp.free}}" data-dtype="Number">
                    <label>{{localize "PILLARS.Connections"}}</label>
                    <input type="number" name="system.xp.connections" value="{{system.xp.connections}}" data-dtype="Number">
                </div>
            </div>

            <div class="form-group">
                <label>{{localize "PILLARS.StartingCP"}}</label>
                <div class="form-fields small">
                    <input type="number" name="system.cp.value" value="{{system.cp.value}}" data-dtype="Number">
                </div>
            </div>

            <div class="form-group">
                <label>{{localize "PILLARS.TransitionCost"}}</label>
                <div class="form-fields small">
                    <input type="number" name="system.transition.value" value="{{system.transition.value}}" data-dtype="Number">
                </div>
            </div>
        
        </div>

        {{> systems/pillars-of-eternity/templates/item/item-effects.hbs}}

    </section>

</form>